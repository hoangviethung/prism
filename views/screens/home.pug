extends ../layouts/layout

block var
    - bodyClass = "home-page"
    - pageTitle = "Prism | Home Page"
block js_run_first
    script(src="./js/home.js")
block css
    link(rel="stylesheet", href="./css/home.css")
block main
    section.home-screen.container-extension.has-nav-extention
        .header-extension
            a.logo(href="index.html")
                img(src="./images/logo_white.png", alt="Prism")
            h1.total-current-money
                span.currency $
                span 0,00
            .home-main-actions
                a.btn.btn-sm.btn-primary(href="#") Send
                a.btn.btn-sm.btn-primary(href="#") Receive
                a.btn.btn-sm.btn-primary(href="#") Buy
        .body-extension
            .tabs-extension-container
                .tabs
                    .tab__item.active Coins
                    .tab__item Collectibles
            .control-panel
                .search
                    input.form-control(type="text" placeholder="Search")
                .filter
                    .dropdown
                        .filter-item-active(data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") All Chain
                        .dropdown-menu
                            button.dropdown-item.dropdown-item-selected
                                .icon-coin
                                    img(src="./images/bitcoin-icon.png", alt="bitcoin")
                                .text Bitcoin
                            button.dropdown-item
                                .icon-coin
                                    img(src="./images/ethereum-icon.png", alt="ethereum")
