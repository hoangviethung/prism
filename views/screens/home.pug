extends ../layouts/layout

block var
    - bodyClass = "home-page"
    - pageTitle = "Prism | Home Page"
block css
    link(rel="stylesheet", href="./css/home.css")
block main
    section.home-screen.container-extension.has-nav-extention
        .header-extension
            a.logo(href="index.html")
                img(src="./images/logo_white.png", alt="Prism")
            h1.total-current-money
                span.currency $
                span 0,00
            .home-main-actions
                a.btn.btn-sm.btn-primary(href="#") Send
                a.btn.btn-sm.btn-primary(href="#") Receive
                a.btn.btn-sm.btn-primary(href="#") Buy
        .body-extension
            .tabs-extension-container
                .tabs
                    .tab__item.active Coins
                    .tab__item Collectibles
            .control-panel
                .search
                    input.form-control(type="text" placeholder="Search")
                .filter
                    .form-select
                        select(name="")
                            option(value="#") All Chain
                            option(value="#") All Chain
                            option(value="#") All Chain
            .coins
                -for(i=0;i<4;i++)
                    .coin__item
                        .left
                            .icon
                                img(src="./images/bitcoin-icon.png", alt="bitcoin")
                            .name
                                h4
                                    span 12
                                    span BTC
                                h3
                                    span $
                                    span 391,402
                        .right
                            p.percentage +1.6%
                            .dropdown
                                button.btn-more.dropdown-toggle#dropdownMenuButton(data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                                    i.far.fa-ellipsis-h
                                .dropdown-menu(aria-labelledby="dropdownMenuButton")
                                    a.dropdown-item(href="#") Action
                                    a.dropdown-item(href="#") Action
                                    a.dropdown-item(href="#") Action
                                    a.dropdown-item(href="#") Action
        include ../layouts/nav