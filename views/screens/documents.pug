            button.btn.btn-block.btn-lg.btn-primary primary
            h1 button secondary
            button.btn.btn-sm.btn-secondary secondary
            button.btn.btn-sm.btn-outline-secondary secondary
            button.btn.btn-secondary secondary
            button.btn.btn-outline-secondary secondary
            button.btn.btn-lg.btn-secondary secondary
            button.btn.btn-block.btn-lg.btn-secondary secondary
            h1 button success
            button.btn.btn-sm.btn-success success
            button.btn.btn-sm.btn-outline-success success
            button.btn.btn-success success
            button.btn.btn-outline-success success
            button.btn.btn-lg.btn-success success
            button.btn.btn-block.btn-lg.btn-success success
            h1 button info
            button.btn.btn-sm.btn-info info
            button.btn.btn-sm.btn-outline-info info
            button.btn.btn-info info
            button.btn.btn-outline-info info
            button.btn.btn-lg.btn-info info
            button.btn.btn-block.btn-lg.btn-info info
            h1 button warning
            button.btn.btn-sm.btn-warning warning
            button.btn.btn-sm.btn-outline-warning warning
            button.btn.btn-warning warning
            button.btn.btn-outline-warning warning
            button.btn.btn-lg.btn-warning warning
            button.btn.btn-block.btn-lg.btn-warning warning
            h1 button error
            button.btn.btn-sm.btn-error error
            button.btn.btn-sm.btn-outline-error error
            button.btn.btn-error error
            button.btn.btn-outline-error error
            button.btn.btn-lg.btn-error error
            button.btn.btn-block.btn-lg.btn-error error
            h1 input
            input.form-control(type="email" placeholder="Input Demo")
            h1 input have label
            .form-control-have-label
                label.form-label
                    span Your wallet name
                    span.note (min 8 characters)
                input.form-control(type="email" placeholder="Input Demo")
            h1 checkbox
            .form-check-input
                input(type="checkbox")
            h1 radio
            .form-check-input
                input(type="radio" name="demo")
            .form-check-input
                input(type="radio" name="demo")
            .form-check-input
                input(type="radio" name="demo")
            .form-check-input
                input(type="radio" name="demo")
            h1 checkbox have label
            label.form-check
                .form-label label
                .form-check-input
                    input(type="checkbox")
            h1 Group Buttons
            .form-group-buttons-2
                button.btn.btn-block.btn-lg.btn-outline-primary back
                button.btn.btn-block.btn-lg.btn-primary next
            .extention-fullpage-steps
                ul.steps
                    li.step__item.active
                        a(href="#") 1
                    li.step__item
                        a(href="#") 2
                    li.step__item
                        a(href="#") 3
                    li.step__item
                        a(href="#") 4
                    li.step__item
                        a(href="#") 5
                    li.step__item
                        a(href="#") 6