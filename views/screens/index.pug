extends ../layouts/layout

block var
    - bodyClass = "login-page"
    - pageTitle = "Prism | Login Page"
block js_run_first
    script(src="./js/sign-in.js")
block css
    link(rel="stylesheet", href="./css/login.css")
block main
    section.welcome-screen.container-extension
        .header-extension
            a.logo(href="index.html")
                img(src="./images/logo_white.png", alt="Prism")
            p Welcome to
            h1 PRISM Wallet
        .login-in
            .auth-form
                form.form-container
                    .form-wrapper.form-auth
                        .form-control-have-label
                            label.form-label Email
                            input.form-control(type="email", name="email", value="", placeholder="Your Email")
                        .form-control-have-label
                            label.form-label Password 
                                span.note (min 8 characters)
                            input.form-control(type="password", name="password", value="", placeholder="Your Password")
                .forgot-password
                    a(href="password-recovery.html") Forgot password?
            a#sign-in.btn.btn-block.btn-lg.btn-primary-dark-1 Log in
            .other-login
                .or Or sign in with
                .d-flex.jc-c.al-c
                    img.social(src="./images/google-social.png", alt="google")
                    img.social(src="./images/twitter-social.png", alt="twitter")
                    img.social(src="./images/facebook-social.png", alt="facebook")
                .footer-auth
                    .sign-up
                        p.dont-wallet
                            span Don't have wallet? 
                            a(href="create-wallet.html").fw-700 Sign up
                    .restore-wallet
                        a(href="restore-wallet.html").fw-700 Restore a wallet